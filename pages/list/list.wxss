/**list.wxss**/
.list_com{
  display: flex;
  width: 100%;
  margin: 2px 0px;
  height: 100%;
  background-color: #eee;
}
.list_img{
  flex:2;
  width: 150px;
  height: 120px;
}
.list_img image{
  width: 100%;
  height: 100%;
}
.list_right{
  flex:3;
  display: flex;
  flex-direction: column;
}
.list_title{
  display: flex;
  flex: 2;
  align-items: flex-start;
  font-family: "微软雅黑";
  font-size: 1em;
}
.list_time{
  display: flex;
  align-items: flex-end;
}